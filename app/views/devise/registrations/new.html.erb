<div class="containter">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Sign up for Pro!</h1>
          <p>Your $10 a month will directly advance our path toward the apocolypse! As well as get you exclusive perks!</p>
        <% else %>
          <h2>Sign Up for Free Access</h2>
        <% end %>
      </div>

      <div class="well">
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>


        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>